    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest: Run Tests",
            "module": "python",
            "args": ["pytest"],
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        }, {
            "name": "Debug test",
            "type": "python",
            "request": "test",
            "console": "externalTerminal",
            "justMyCode": false,
            "stopOnEntry": true,
            "envFile": "${workspaceFolder}/.env.test",
        }
    ]
}